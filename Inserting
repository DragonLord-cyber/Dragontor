schedule = (
    (1, "СБ", "12:00-13:45"),
    (1, "ВС", "16:00-17:45"),
    (4, "ВС", "12:00-13:45"),
    (5, "ВС", "14:00-15:45"),
    (6, "CР", "16:00-17:45"),
    (6, "ВС", "16:00-17:45"),
    (7, "ВТ", "18:00-19:45"),
    (7, "CР", "18:00-19:45\n16:00:17-45"),
    (8, "ВТ", "16:00-17:45"),
    (9, "ВТ", "18:00-19:45"),
    (10, "ЧТ", "16:00-17:45\n18:00-19:45")
)

for i in courses:
    cur.execute("insert into courses values (?, ?, ?, ?)", i)

for i in schedule:
    cur.execute("insert into schedule values (?, ?, ?)", i)

cur.execute("SELECT * FROM courses")
rows = cur.fetchall()
print(rows)

cur.execute("SELECT * FROM schedule")
rows = cur.fetchall()
print(rows)

conn.commit()
conn.close()
