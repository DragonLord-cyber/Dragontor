import sqlite3
conn = sqlite3.connect('mydatabase.db')
cur = conn.cursor()
cur.execute("DROP TABLE IF EXISTS courses")
cur.execute("DROP TABLE IF EXISTS schedule")
cur.execute("PRAGMA foreign_keys=on")
cur.execute("CREATE TABLE IF NOT EXISTS courses(id_courses INT NOT NULL PRIMARY KEY, name CHAR, description CHAR, filial CHAR)")
cur.execute("CREATE TABLE IF NOT EXISTS schedule (id_schedule INT , "
            "day_of_week CHAR, time CHAR, "
            "FOREIGN KEY (id_schedule) REFERENCES courses (id_courses) ON UPDATE CASCADE)")
